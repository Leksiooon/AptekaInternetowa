@model AptekaInternetowa.Models.ViewModels.GlobalVM

    <div style="padding: 10px">
        <h4>@Model.Title</h4>
    </div>

    <div class="row">
        @foreach (var produkt in Model.HomeVM.Produkty)
        {
            <div class="col-sm-3 col-md-3 col-lg-3">
                <div class="img-thumbnail">
                    <img class="image" src="~/images/@produkt.ZdjecieUrl" alt="" />
                    <a asp-controller="Produkt" asp-action="Szczegoly" asp-route-id="@produkt.Id"><h2>@produkt.Nazwa</h2></a>
                    <h3>@produkt.Producent</h3>
                    <h3>@produkt.Cena.ToString("c")</h3>
                </div>

            </div>
        }
    </div>