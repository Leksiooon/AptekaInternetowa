@model AptekaInternetowa.ViewModels.HomeVM

<h2>@Model.Title</h2>

<div class="row">
    @foreach (var produkt in Model.Produkty)
    {
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="img-thumbnail">
                <img class="image" src="@produkt.ZdjecieUrl"/>
                <h2>@produkt.Nazwa</h2>
                <h3>@produkt.Producent</h3>
                <h3>@produkt.Cena.ToString("c")</h3>
            </div>
            
        </div>
    }
</div>