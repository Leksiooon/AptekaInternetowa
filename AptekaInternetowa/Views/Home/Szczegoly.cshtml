@model AptekaInternetowa.Models.ProduktM.Produkt

<div class="container" style="padding: 15px">
    <div class="row">
        <div class="col-4">
            <img src="~/images/@Model.ZdjecieUrl" alt=""/>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-8">
                    <h4>@Model.Nazwa</h4>
                </div>
                <div class="col-4">
                    <p>Producent: @Model.Producent</p>
                </div>
            </div>

            <p><h6>Cena za sztukę:</h6> @Model.Cena</p>
            <a asp-controller="ZamowienieElement" asp-action="Add" asp-route-id="@Model.Id" asp-route-ilosc="1" class="btn btn-primary" role="button">Link</a>
            <p><h6>Działanie:</h6> @Model.Dzialanie</p>
            <p><h6>Wskazania:</h6> @Model.Wskazania</p>
        </div>
    </div>

    <p><h5>Dawkowanie:</h5> @Model.Dawkowanie</p>
    <p><h5>Skład:</h5> @Model.Sklad</p>
    <p><h5>Przeciwwskazania:</h5> @Model.Przeciwwskazania</p>
    <p><h5>Dodatkowe informacje:</h5> @Model.DodatkoweInformacje</p>

</div>