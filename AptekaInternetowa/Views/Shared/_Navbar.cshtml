@model AptekaInternetowa.Models.ViewModels.NavBarVM

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h3>Strona główna</h3></a>

        <form class="form-inline" action="/action_page.php">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>

        <div style="float: right; font-size: 18px">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" style="display: block; padding: 0.5rem 1rem;">
                        <b>Witaj @User.Identity.Name</b>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-action="Logout" asp-controller="Account" id="form_logout">
                            <a href="javascript:{}" onclick="document.getElementById('form_logout').submit();" class="nav-link">Wyloguj</a>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a asp-action="ShowBasket" asp-controller="Zamowienie" asp-route-id="@Model.Zamowienie.Id" class="nav-link">Koszyk @Model.Zamowienie.Wartosc zł</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-action="Login" asp-controller="Account" class="nav-link">Logowanie</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>